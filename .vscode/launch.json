{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch (API)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/src/EducationalWebsite.API/bin/Debug/net8.0/EducationalWebsite.API.dll",
        "args": [],
        "cwd": "${workspaceFolder}/src/EducationalWebsite.API",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/Views"
        },
        "dotnetRunMessages": true,
        "launchBrowser": {
          "enabled": true,
          "args": "${auto-detect-url}",
          "windows": {
            "command": "cmd.exe",
            "args": "/C start ${auto-detect-url}"
          },
          "osx": {
            "command": "open"
          },
          "linux": {
            "command": "xdg-open"
          }
        },
        "hotReloadEnabled": true,
        "hotReloadProfile": "aspnetcore"
      }
    ]
  }
  
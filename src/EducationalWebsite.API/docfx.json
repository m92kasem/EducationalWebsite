{
    "metadata": [
      {
        "src": [
          {
            "files": ["**/*.csproj"],
            "cwd": "../.."  
          }
        ],
        "dest": "api"
      }
    ],
    "build": {
      "content": [
        {
          "files": [
            "**/*.md",
            "**/*.yml",
            "../../docs/**/*.md" 
          ]
        }
      ],
      "resource": [
        {
          "files": [
            "images/**"
          ]
        }
      ],
      "dest": "_site",
      "globalMetadata": {
        "_enableSearch": true
      },
      "template": ["default"]
    }
  }
  